<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WarehouseStockOpname.ViewModels"
             xmlns:models="clr-namespace:WarehouseStockOpname.Models"
             x:Class="WarehouseStockOpname.Views.AddStockPage"
             x:DataType="viewmodels:AddStockViewModel"
             Title="Add Stock Manually">

    <Grid RowDefinitions="Auto,Auto,Auto,*,Auto" Padding="15">
        
        <!-- Search Products -->
        <SearchBar Grid.Row="0" 
                   Placeholder="Search products..."
                   Text="{Binding SearchText}"
                   Margin="0,0,0,10"/>

        <!-- Selected Product -->
        <Frame Grid.Row="1" 
               BackgroundColor="#E3F2FD" 
               Padding="15" 
               Margin="0,0,0,10"
               IsVisible="{Binding SelectedProduct, Converter={StaticResource IsNotNullConverter}}"
               CornerRadius="10">
            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="{Binding SelectedProduct.Name}" 
                       FontSize="16" 
                       FontAttributes="Bold"
                       TextColor="#1976D2"/>
                
                <Label Grid.Row="1" Grid.Column="0"
                       Text="{Binding SelectedProduct.SKU, StringFormat='SKU: {0}'}" 
                       FontSize="12" 
                       TextColor="#1976D2"/>
                
                <Label Grid.Row="2" Grid.Column="0"
                       Text="{Binding SelectedProduct.SystemStock, StringFormat='System Stock: {0}'}" 
                       FontSize="12" 
                       TextColor="#1976D2"/>

                <Label Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"
                       Text="{Binding SelectedProduct.Location}" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="#1976D2"
                       VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Input Section -->
        <Frame Grid.Row="2" 
               BackgroundColor="White" 
               Padding="15" 
               Margin="0,0,0,10"
               IsVisible="{Binding SelectedProduct, Converter={StaticResource IsNotNullConverter}}"
               CornerRadius="10">
            <VerticalStackLayout Spacing="10">
                <Label Text="Physical Stock Count" FontSize="14" FontAttributes="Bold"/>
                <Entry Text="{Binding PhysicalStock}" 
                       Placeholder="Enter physical stock"
                       Keyboard="Numeric"
                       FontSize="16"/>

                <Label Text="Notes (Optional)" FontSize="14" FontAttributes="Bold"/>
                <Editor Text="{Binding Notes}" 
                        Placeholder="Add notes about this count..."
                        HeightRequest="80"
                        FontSize="14"/>
            </VerticalStackLayout>
        </Frame>

        <!-- Product List -->
        <CollectionView Grid.Row="3" 
                       ItemsSource="{Binding Products}"
                       SelectionMode="None">
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="No products available" 
                           FontSize="16" 
                           TextColor="Gray"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
            
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Product">
                    <Frame Margin="0,5" 
                           Padding="15" 
                           BackgroundColor="White"
                           CornerRadius="10">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:AddStockViewModel}}, Path=SelectProductCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>
                        
                        <Grid ColumnDefinitions="*,Auto">
                            <VerticalStackLayout Grid.Column="0">
                                <Label Text="{Binding Name}" 
                                       FontSize="14" 
                                       FontAttributes="Bold"/>
                                <Label Text="{Binding SKU, StringFormat='SKU: {0}'}" 
                                       FontSize="11" 
                                       TextColor="Gray"/>
                                <Label Text="{Binding Location, StringFormat='Location: {0}'}" 
                                       FontSize="11" 
                                       TextColor="Gray"/>
                            </VerticalStackLayout>

                            <Label Grid.Column="1" 
                                   Text="{Binding SystemStock}" 
                                   FontSize="18" 
                                   FontAttributes="Bold"
                                   TextColor="#2196F3"
                                   VerticalOptions="Center"/>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Save Button -->
        <Button Grid.Row="4" 
                Text="Save Stock Count"
                Command="{Binding SaveCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                Margin="0,10,0,0"
                CornerRadius="10"
                IsEnabled="{Binding SelectedProduct, Converter={StaticResource IsNotNullConverter}}"/>
    </Grid>
</ContentPage>
