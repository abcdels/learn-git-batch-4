<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WarehouseStockOpname.ViewModels"
             xmlns:models="clr-namespace:WarehouseStockOpname.Models"
             x:Class="WarehouseStockOpname.Views.StockOpnameDetailPage"
             x:DataType="viewmodels:StockOpnameDetailViewModel"
             Title="Stock Opname Detail">

    <Grid RowDefinitions="Auto,Auto,*,Auto" Padding="10">
        
        <!-- Header Info -->
        <Frame Grid.Row="0" 
               BackgroundColor="{Binding StatusColor}" 
               Padding="15" 
               Margin="0,0,0,10"
               CornerRadius="10">
            <Grid ColumnDefinitions="*,Auto">
                <VerticalStackLayout Grid.Column="0">
                    <Label Text="{Binding StockOpname.OpnameNumber}" 
                           FontSize="20" 
                           FontAttributes="Bold" 
                           TextColor="White"/>
                    <Label Text="{Binding StockOpname.OpnameDate, StringFormat='Date: {0:dd MMM yyyy HH:mm}'}" 
                           FontSize="14" 
                           TextColor="White"/>
                    <Label Text="{Binding StockOpname.PerformedBy, StringFormat='By: {0}'}" 
                           FontSize="14" 
                           TextColor="White"/>
                </VerticalStackLayout>
                
                <Button Grid.Column="1" 
                        Text="Change Status"
                        Command="{Binding ChangeStatusCommand}"
                        BackgroundColor="#FFFFFF"
                        TextColor="{Binding StatusColor}"
                        FontSize="12"
                        Padding="10,5"
                        CornerRadius="5"
                        VerticalOptions="Center"/>
            </Grid>
        </Frame>

        <!-- Statistics -->
        <Grid Grid.Row="1" ColumnDefinitions="*,*" Margin="0,0,0,10">
            <Frame Grid.Column="0" 
                   BackgroundColor="#E3F2FD" 
                   Padding="15" 
                   Margin="0,0,5,0"
                   CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Total Items" FontSize="12" TextColor="#1976D2"/>
                    <Label Text="{Binding TotalItems}" FontSize="20" FontAttributes="Bold" TextColor="#1565C0"/>
                </VerticalStackLayout>
            </Frame>

            <Frame Grid.Column="1" 
                   BackgroundColor="#FFEBEE" 
                   Padding="15" 
                   Margin="5,0,0,0"
                   CornerRadius="10">
                <VerticalStackLayout>
                    <Label Text="Total Difference" FontSize="12" TextColor="#C62828"/>
                    <Label Text="{Binding TotalDifference}" FontSize="20" FontAttributes="Bold" TextColor="#B71C1C"/>
                </VerticalStackLayout>
            </Frame>
        </Grid>

        <!-- Items List -->
        <RefreshView Grid.Row="2" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadDataCommand}">
            <CollectionView ItemsSource="{Binding Details}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No items scanned yet" 
                               FontSize="18" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                        <Label Text="Start scanning products" 
                               FontSize="14" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:StockOpnameDetailViewModel">
                        <Frame Margin="5" 
                               Padding="15" 
                               BackgroundColor="White"
                               CornerRadius="10">
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                
                                <!-- Product Info -->
                                <VerticalStackLayout Grid.Row="0" Grid.Column="0">
                                    <Label Text="{Binding ProductName}" 
                                           FontSize="16" 
                                           FontAttributes="Bold"/>
                                    <Label Text="{Binding SKU, StringFormat='SKU: {0}'}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                    <Label Text="{Binding Location, StringFormat='Location: {0}'}" 
                                           FontSize="12" 
                                           TextColor="Gray"/>
                                </VerticalStackLayout>

                                <!-- Actions -->
                                <HorizontalStackLayout Grid.Row="0" Grid.Column="1" Spacing="5">
                                    <Button Text="âœï¸"
                                            BackgroundColor="#2196F3"
                                            TextColor="White"
                                            CornerRadius="5"
                                            Padding="10,5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:StockOpnameDetailViewModel}}, Path=EditDetailCommand}"
                                            CommandParameter="{Binding .}"/>
                                    
                                    <Button Text="ðŸ—‘ï¸"
                                            BackgroundColor="#F44336"
                                            TextColor="White"
                                            CornerRadius="5"
                                            Padding="10,5"
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:StockOpnameDetailViewModel}}, Path=DeleteDetailCommand}"
                                            CommandParameter="{Binding .}"/>
                                </HorizontalStackLayout>

                                <!-- Stock Info -->
                                <Grid Grid.Row="1" Grid.ColumnSpan="2" 
                                      ColumnDefinitions="*,*,*" 
                                      Margin="0,10,0,0">
                                    <VerticalStackLayout Grid.Column="0">
                                        <Label Text="System" FontSize="10" TextColor="Gray"/>
                                        <Label Text="{Binding SystemStock}" FontSize="16" FontAttributes="Bold"/>
                                    </VerticalStackLayout>
                                    
                                    <VerticalStackLayout Grid.Column="1">
                                        <Label Text="Physical" FontSize="10" TextColor="Gray"/>
                                        <Label Text="{Binding PhysicalStock}" FontSize="16" FontAttributes="Bold" TextColor="#2196F3"/>
                                    </VerticalStackLayout>
                                    
                                    <VerticalStackLayout Grid.Column="2">
                                        <Label Text="Difference" FontSize="10" TextColor="Gray"/>
                                        <Label Text="{Binding DifferenceDisplay}" 
                                               FontSize="16" 
                                               FontAttributes="Bold" 
                                               TextColor="{Binding DifferenceColor}"/>
                                    </VerticalStackLayout>
                                </Grid>

                                <!-- Notes -->
                                <Label Grid.Row="2" Grid.ColumnSpan="2"
                                       Text="{Binding Notes}" 
                                       FontSize="12" 
                                       TextColor="Gray"
                                       Margin="0,5,0,0"
                                       IsVisible="{Binding Notes, Converter={StaticResource IsNotNullOrEmptyConverter}}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>

        <!-- Action Buttons -->
        <Grid Grid.Row="3" ColumnDefinitions="*,*,*" Margin="0,10,0,0">
            <Button Grid.Column="0" 
                    Text="ðŸ“· Scan"
                    Command="{Binding ScanProductCommand}"
                    BackgroundColor="#2196F3"
                    TextColor="White"
                    Margin="2"
                    CornerRadius="10"/>
            
            <Button Grid.Column="1" 
                    Text="âž• Add Manual"
                    Command="{Binding AddManualCommand}"
                    BackgroundColor="#FF9800"
                    TextColor="White"
                    Margin="2"
                    CornerRadius="10"/>
            
            <Button Grid.Column="2" 
                    Text="âœ“ Complete"
                    Command="{Binding CompleteOpnameCommand}"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    Margin="2"
                    CornerRadius="10"/>
        </Grid>
    </Grid>
</ContentPage>
