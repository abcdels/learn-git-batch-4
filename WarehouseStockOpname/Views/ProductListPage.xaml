<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WarehouseStockOpname.ViewModels"
             xmlns:models="clr-namespace:WarehouseStockOpname.Models"
             x:Class="WarehouseStockOpname.Views.ProductListPage"
             x:DataType="viewmodels:ProductListViewModel"
             Title="Product List">

    <Grid RowDefinitions="Auto,*" Padding="10">
        
        <!-- Search Bar -->
        <SearchBar Grid.Row="0" 
                   Placeholder="Search by SKU, name, or category..."
                   Text="{Binding SearchText}"
                   Margin="0,0,0,10"/>

        <!-- Products List -->
        <RefreshView Grid.Row="1" 
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding LoadProductsCommand}">
            <CollectionView ItemsSource="{Binding FilteredProducts}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="No products found" 
                               FontSize="18" 
                               TextColor="Gray"
                               HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Product">
                        <Frame Margin="5" 
                               Padding="15" 
                               BackgroundColor="White"
                               CornerRadius="10">
                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ProductListViewModel}}, Path=ViewProductDetailCommand}"
                                    CommandParameter="{Binding .}"/>
                            </Frame.GestureRecognizers>
                            
                            <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                
                                <!-- Product Info -->
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="{Binding Name}" 
                                       FontSize="16" 
                                       FontAttributes="Bold"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="{Binding SKU, StringFormat='SKU: {0}'}" 
                                       FontSize="12" 
                                       TextColor="Gray"/>

                                <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Spacing="10" Margin="0,5,0,0">
                                    <Frame Padding="5,2" 
                                           BackgroundColor="#E3F2FD" 
                                           CornerRadius="3">
                                        <Label Text="{Binding Category}" 
                                               FontSize="10" 
                                               TextColor="#1976D2"/>
                                    </Frame>
                                    
                                    <Frame Padding="5,2" 
                                           BackgroundColor="#FFF3E0" 
                                           CornerRadius="3">
                                        <Label Text="{Binding Location}" 
                                               FontSize="10" 
                                               TextColor="#F57C00"/>
                                    </Frame>
                                </HorizontalStackLayout>

                                <!-- Stock Info -->
                                <VerticalStackLayout Grid.Row="0" Grid.RowSpan="3" Grid.Column="1" 
                                                   HorizontalOptions="End" 
                                                   VerticalOptions="Center">
                                    <Label Text="Stock" 
                                           FontSize="10" 
                                           TextColor="Gray" 
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding SystemStock}" 
                                           FontSize="24" 
                                           FontAttributes="Bold" 
                                           TextColor="#2196F3"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding Unit}" 
                                           FontSize="10" 
                                           TextColor="Gray"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </RefreshView>
    </Grid>
</ContentPage>
